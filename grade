#!/bin/bash

for f in *.c; do
  if [ -f "$f" ]; then
    rm -f a.out
    cat "$f"
    gcc "$f"
    firejail --quiet ./a.out
    read -p "Results above are for $f. Press any key to resume...
" -n1 -s
  fi
done

for f in ./*.py; do
  if [ -f "$f" ]; then
    cat "$f"
    firejail --private=. --net=none --quiet python3 -m doctest -v "$f"
    read -p "Results above are for $f. Press any key to resume...
" -n1 -s
  fi
done
